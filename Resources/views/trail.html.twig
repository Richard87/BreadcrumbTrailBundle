{%- if trail.count %}
  <ul class="breadcrumb">
  {% for breadcrumb in trail %}
    {%- if loop.first %}
        <li class="home">
    {%- else %}
        <li>
    {%- endif %}
    {%- if breadcrumb.url is null -%}
        {{ breadcrumb.title|trans }}
    {%- else -%}
        <a href="{{ breadcrumb.url }}">{{ breadcrumb.title|trans }}</a>
    {%- endif -%}
    </li>
    {% if not loop.last %}
        <span class="divider">/</span>
    {% endif %}
  {% endfor %}
  </ul>
{%- endif -%}
